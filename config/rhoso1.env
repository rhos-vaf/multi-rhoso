#!/bin/bash
# RHOSO Instance 1 Configuration
# NOTE: Common settings are defined in the Makefile (PASSWORD, TIMEOUT, network isolation, etc.)

#############################################
# Namespace Configuration
# You can use any name: openstack, rhoso1, production, democluster, etc.
#############################################
export NAMESPACE=rhoso1

#############################################
# Instance-Specific Network Addressing
# MUST be unique and non-overlapping with other RHOSO instances
# RHOSO 1 uses 172.17.X.0/24 range (allows for 256 networks)
# Starting at 172.17 to avoid conflicts with 172.16.0.0/16 applications
#############################################
# Control Plane Network
export NNCP_CTLPLANE_IP_ADDRESS_SUFFIX=10

# Internal API Network (VLAN 20)
export NETWORK_INTERNALAPI_ADDRESS_PREFIX=172.17.20

# Storage Network (VLAN 21)
export NETWORK_STORAGE_ADDRESS_PREFIX=172.17.21

# Tenant Network (VLAN 22)
export NETWORK_TENANT_ADDRESS_PREFIX=172.17.22

# Storage Management Network (VLAN 23)
export NETWORK_STORAGEMGMT_ADDRESS_PREFIX=172.17.23

# Designate Network (VLAN 25)
export NETWORK_DESIGNATE_ADDRESS_PREFIX=172.17.25

# Designate External Network (VLAN 26)
export NETWORK_DESIGNATE_EXT_ADDRESS_PREFIX=172.17.26

#############################################
# MetalLB IP Pools (MUST be unique)
#############################################
export CTLPLANE_METALLB_POOL=192.168.122.80-192.168.122.90

#############################################
# Data Plane Configuration
#############################################
export DATAPLANE_COMPUTE_IP=192.168.122.100
export DATAPLANE_COMPUTE_0_IP=192.168.122.100
export DATAPLANE_COMPUTE_0_NAME=edpm-compute-0

echo "âœ… RHOSO Instance 1 configuration loaded"
echo "   Namespace: ${NAMESPACE}"
echo "   CtlPlane MetalLB Pool: ${CTLPLANE_METALLB_POOL}"
echo "   Internal API: ${NETWORK_INTERNALAPI_ADDRESS_PREFIX}.0/24"
echo "   Storage: ${NETWORK_STORAGE_ADDRESS_PREFIX}.0/24"
echo "   Tenant: ${NETWORK_TENANT_ADDRESS_PREFIX}.0/24"
